import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int opcao = 0;

        while (opcao != 7) {
            System.out.println("=== SISTEMA DE CONTROLE DE DESPESAS ===");
            System.out.println("1 - Entrar Despesa");
            System.out.println("2 - Anotar Pagamento");
            System.out.println("3 - Listar Despesas em Aberto");
            System.out.println("4 - Listar Despesas Pagas");
            System.out.println("5 - Gerenciar Tipos de Despesa");
            System.out.println("6 - Gerenciar Usuários");
            System.out.println("7 - Sair");
            System.out.print("Escolha uma opção: ");

            opcao = sc.nextInt();
            sc.nextLine(); // Limpa buffer

            switch (opcao) {
                case 1:
                    System.out.println(">> Entrar Despesa selecionado");
                    break;
                case 2:
                    System.out.println(">> Anotar Pagamento selecionado");
                    break;
                case 3:
                    System.out.println(">> Listar Despesas em Aberto selecionado");
                    break;
                case 4:
                    System.out.println(">> Listar Despesas Pagas selecionado");
                    break;
                case 5:
                    System.out.println(">> Gerenciar Tipos de Despesa selecionado");
                    break;
                case 6:
                    System.out.println(">> Gerenciar Usuários selecionado");
                    break;
                case 7:
                    System.out.println(">> Saindo...");
                    break;
                default:
                    System.out.println("Opção inválida!");
            }
            System.out.println();
        }

        sc.close();
    }
}

import java.util.Scanner;
import controllers.*;

public class Main {
    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        DespesaController despesaController = new DespesaController();
        PagamentoController pagamentoController = new PagamentoController();
        TipoDespesaController tipoDespesaController = new TipoDespesaController();
        UsuarioController usuarioController = new UsuarioController();

        int opcao = 0;

        while (opcao != 7) {
            System.out.println("=== SISTEMA DE CONTROLE DE DESPESAS ===");
            System.out.println("1 - Entrar Despesa");
            System.out.println("2 - Anotar Pagamento");
            System.out.println("3 - Listar Despesas em Aberto");
            System.out.println("4 - Listar Despesas Pagas");
            System.out.println("5 - Gerenciar Tipos de Despesa");
            System.out.println("6 - Gerenciar Usuários");
            System.out.println("7 - Sair");
            System.out.print("Escolha uma opção: ");

            opcao = sc.nextInt();
            sc.nextLine();

            switch (opcao) {
                case 1 -> despesaController.criarDespesaPOC();
                case 2 -> pagamentoController.registrarPagamentoPOC();
                case 3 -> despesaController.listarAbertoPOC();
                case 4 -> despesaController.listarPagasPOC();
                case 5 -> tipoDespesaController.menuPOC();
                case 6 -> usuarioController.menuPOC();
                case 7 -> System.out.println(">> Saindo...");
                default -> System.out.println("Opção inválida!");
            }
            System.out.println();
        }

        sc.close();
    }
}

package models;

public interface Pagavel {
    void registrarPagamento(double valor, String data);
}

package models;

public abstract class Despesa implements Pagavel {
    protected String descricao;
    protected double valor;
    protected String dataVencimento;
    protected String categoria;
    protected boolean paga = false;

    public Despesa(String descricao, double valor, String dataVencimento, String categoria) {
        this.descricao = descricao;
        this.valor = valor;
        this.dataVencimento = dataVencimento;
        this.categoria = categoria;
    }
package models;

public class Transporte extends Despesa {

    public Transporte(String descricao, double valor, String dataVencimento) {
        super(descricao, valor, dataVencimento, "Transporte");
    }

    @Override
    public void exibirDetalhes() {
        System.out.println("[Transporte] " + descricao + " - R$" + valor);
    }
}



    public abstract void exibirDetalhes();

    @Override
    public void registrarPagamento(double valor, String data) {
        System.out.println("Pagamento registrado (POC).");
        this.paga = true;
    }
}

package models;

public class Superfluo extends Despesa {

    public Superfluo(String descricao, double valor, String dataVencimento) {
        super(descricao, valor, dataVencimento, "Supérfluo");
    }

    @Override
    public void exibirDetalhes() {
        System.out.println("[Supérfluo] " + descricao + " - R$" + valor);
    }
}

package models;

public class Eventual extends Despesa {

    public Eventual(String descricao, double valor, String dataVencimento) {
        super(descricao, valor, dataVencimento, "Eventual");
    }

    @Override
    public void exibirDetalhes() {
        System.out.println("[Eventual] " + descricao + " - R$" + valor);
    }
}

package controllers;

public class DespesaController {

    public void criarDespesaPOC() {
        System.out.println(">> [POC] Criar despesa");
    }
package controllers;

public class PagamentoController {
    public void registrarPagamentoPOC() {
        System.out.println(">> [POC] Registrar pagamento");
    }
}
package controllers;

public class TipoDespesaController {

    public void menuPOC() {
        System.out.println(">> [POC] Gerenciar Tipos de Despesa");
    }

}


    public void listarAbertoPOC() {
        System.out.println(">> [POC] Listar despesas em aberto");
    }

    public void listarPagasPOC() {
        System.out.println(">> [POC] Listar despesas pagas");
    }

}
package controllers;

public class UsuarioController {

    public void menuPOC() {
        System.out.println(">> [POC] Gerenciar Usuários");
    }

}


